.w-full 
  %div 
    %nav.bg-gray-800.text-white.p-4
      .container.flex.justify-between
        .left_side.flex.items-center
          .website_icon
            .nav_link
              =link_to root_path  do
                = image_tag("logo-light.png",class:"h-12")
          .search_bar 
            = text_field_tag :search, params[:search], class: "pl-[15px] border-none p-2 rounded-[100px] bg-gray-700 text-white"

        - if !user_signed_in?
          .right_side.flex.items-center
            .toggle.theme_mode 
              .button.component
                .nav_link
                  = button_to  do
                    .fa-solid.fa-sun.z-40
            .login_btn 
              .button.component 
                .nav_link
                  =link_to "Sign in", new_user_session_path
            .signup_btn
              .button.component
                .nav_link
                  =link_to "Sign up"
        - else
          .right_side.flex.items-center
            .toggle.theme_mode 
              .button.component
                .nav_link
                  = button_to "Toggle Theme"
            .profile_btn
              .button.component
                .nav_link
                  =link_to "Notification"
            .logout_btn
              .button.component
                .nav_link
                  = button_to "Log out", destroy_user_session_path, method: :delete

